<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/help_toolbar"
            android:background="@color/colorPrimary">
        </View>

        <ImageView
            android:id="@+id/help_close_button"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="35dp"
            android:layout_alignTop="@+id/help_toolbar"
            android:layout_alignBottom="@+id/help_toolbar"
            android:src="@drawable/ic_close_white_24px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helpInfo"
            android:text="Here is where the info goes"
            android:textSize="15sp"/>

    </ScrollView>

</android.support.constraint.ConstraintLayout>