<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative_amounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_pay"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tapCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/medium_tap_coin"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:textSize="50sp"
            android:text="0.00"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/conversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tapCoin"
            android:paddingVertical="10dp"
            android:layout_toRightOf="@id/tapCoin"
            android:drawableRight="@drawable/ic_down_arrow"
            android:textSize="18sp"
            android:text="$0.00" />


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/relative_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_amounts"
        android:layout_above="@+id/buttons">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_centerInParent="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="25sp"/>


                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="25sp"  />


                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="25sp"  />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="25sp"  />


                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="25sp" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="25sp" />


                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="25sp" />


                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="25sp" />


            </TableRow>






            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:textColor="#000000"
                    android:textSize="25sp" />


                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/buttonshape"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            </TableRow>


        </TableLayout>

    </RelativeLayout>





    <TableRow
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tap"
            android:text="TAP"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingVertical="10dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OR"
            android:gravity="center"/>

        <Button
            android:id="@+id/send"
            android:text="Send"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingVertical="10dp" />

        <View
            android:layout_height="1dp"
            android:layout_weight="1" />

    </TableRow>
</RelativeLayout>